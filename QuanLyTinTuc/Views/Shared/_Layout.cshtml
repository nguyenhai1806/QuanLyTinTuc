
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Portal</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" href="~/Upload/icon/icon.svg">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/css_Layout.css" rel="stylesheet" />
    <script src="~/Scripts/remove.js"></script>
    <link href="~/Content/css/cssChuDe.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="row">
            <div class="col-md-4">
                <a class="navbar-brand" href='@Url.Action("Index", "Home")'>
                    <img src="~/Upload/icon/icon.svg" />
                </a>
            </div>
            <div class="col-md-4">
                @using (Html.BeginForm("Search", "TinTuc", FormMethod.Get, new { @class = "navbar-form" }))
                {
                    <div class="form-group search">
                        <div class="search-box">
                            <input style="outline: 0; background-color: white; border: none; width: 90%; font-size: 16px; margin-top: 0.4rem; " spellcheck="false" type="text" placeholder="Search" name="txtSearch">
                            <button type="submit" class="button-search"><img src="~/Upload/icon/icons8_search_3.svg" alt=""></button>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-4 btn-group">
                @if (Session["Username"] == null)
                {
                    <a href="@Url.Action("Login", "Account")" class="cta-btn">Đăng nhập</a>
                }
                else
                {
                    <a href="@Url.Action("Index", "Admin")" class="cta-btn">@Session["Username"]</a>
                }


               <a href="@Url.Action("About", "Home")" class="cta-btn">Hướng dẫn sử dụng</a>
            </div>

            
        </div>

        <div style="text-transform:uppercase" class="topnav row">
            <a href="@Url.Action("ThoiSu","TinTuc")">THỜI SỰ</a>
            <a href="@Url.Action("TheGioi","TinTuc")">THẾ GIỚI</a>
            <a href="@Url.Action("KinhDoanh","TinTuc")">KINH DOANH</a>
            <a href="@Url.Action("GiaiTri","TinTuc")">GIẢI TRÍ</a>
            <a href="@Url.Action("TheThao","TinTuc")">THỂ THAO</a>
            <a href="@Url.Action("PhapLuat","TinTuc")">PHÁP LUẬT</a>
            <a href="@Url.Action("GiaoDuc","TinTuc")">GIÁO DỤC</a>
            <a href="@Url.Action("SucKhoe","TinTuc")">SỨC KHỎE</a>
        </div>
        <div style="clear:both;">
            <hr class="row"/>
        </div>
        
    </header>
    
    <div class="container body-content" style="width:100%">
        @RenderBody()
    </div>

    <footer>
        <hr />
        <div class="contact">
            <a href='#'><img src="~/Upload/icon/Facebook.svg" alt="Alternate Text" /></a>
            <a href='#'><img src="~/Upload/icon/info.svg" /></a>
            <a href='tel:0966152246'><img src="~/Upload/icon/phone.svg" /></a>
            <a href='#'><img src="~/Upload/icon/YouTube.svg" /></a>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
