@model IEnumerable<QuanLyTinTuc.Models.BinhLuan>
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h2>Bình Luận</h2>
<div class="card-body">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Thời gian</th>
                <th>Nội dung</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Tiêu đề</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @String.Format("{0:dd/MM/yyyy}", item.ThoiGian)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Noidung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TinTuc.TieuDe)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaBinhLuan }, new { @class = "badge badge-primary" })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaBinhLuan }, new { @class = "badge badge-danger" })
                </td>
            </tr>
        }
        <tfoot>
            <tr>
                <th>Thời gian</th>
                <th>Nội dung</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Tiêu đề</th>
                <th>Chức năng</th>
            </tr>
        </tfoot>
    </table>
</div>
